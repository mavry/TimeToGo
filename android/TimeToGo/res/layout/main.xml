    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from" />

    <EditText
        android:id="@+id/inputFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="text"
        android:text="כרם מהרל" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/from"
        android:layout_below="@+id/from"
        android:layout_marginTop="15dp"
        android:text="@string/to" />

    <EditText
        android:inputType="text"
        android:id="@+id/inputTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/to"
        android:layout_below="@+id/to"
        android:layout_marginTop="15dp"
        android:ems="10" 
        android:text="אריה רגב 6, נתניה"/>

    <Button
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputTo"
        android:layout_below="@+id/inputTo"
        android:layout_marginTop="15dp"
        android:text="@string/go" 
        android:onClick="onGoBtnClicked"       
        />
         
     <TextView
        android:id="@+id/eta"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ETA:"
        android:textIsSelectable="true" 
        android:layout_below="@+id/go"
       />

       
 	
    <TextView
        android:id="@+id/debug"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="debug:"
        android:textIsSelectable="true" 
        android:layout_below="@+id/eta"
       />
 </LinearLayout>
 